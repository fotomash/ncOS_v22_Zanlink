# ncOS v23 Dockerfile
FROM python:3.11-slim

WORKDIR /app

# Install dependencies
COPY requirements.txt .
RUN pip install --no-cache-dir -r requirements.txt

# Copy application files
COPY ncos_bootstrap.py .
COPY ncos_v23_unified_engine.py .
COPY ncos_v23_config.json .

# Create data directory
RUN mkdir -p /data

# Expose port
EXPOSE 8000

# Set environment variables
ENV NCOS_DATA_PATH=/data
ENV PYTHONUNBUFFERED=1

# Run the application
CMD ["python", "ncos_v23_unified_engine.py"]
